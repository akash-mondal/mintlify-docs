    "primary": "#DB2777",
    "light": "#F472B6",
    "dark": "#BE185D"
  },
  "appearance": {
    "default": "dark"
  },
  "background": {
    "decoration": "gradient",
    "color": {
      "light": "#FFFBFC",
      "dark": "#110710"
    }
  },
  "fonts": {
