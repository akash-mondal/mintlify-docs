      "family": "Outfit",
      "weight": 600
    },
    "body": {
      "family": "Plus Jakarta Sans",
      "weight": 400
    }
  },
  "styling": {
    "codeblocks": {
      "light": "rose-pine-dawn",
      "dark": "rose-pine"
    }
  },
  "favicon": "/favicon.svg",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "search": {
    "prompt": "Search the guide..."
  },
  "thumbnails": {
    "appearance": "dark"
